<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Edit Product</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100 p-8">

  <div class="max-w-2xl mx-auto bg-white p-6 rounded-xl shadow">
    <h2 class="text-2xl font-bold mb-5">Edit Product</h2>

    <form action="/admin/products/<%= product.id %>/edit" 
          method="POST" enctype="multipart/form-data">

      <!-- PRODUCT NAME -->
      <label class="block font-semibold mb-1">Product Name</label>
      <input type="text" name="name" 
        class="w-full border p-2 rounded mb-4"
        value="<%= product.name %>" required />

      
      <!-- Structured Description Fields -->
      <!-- DESCRIPTION -->
<div class="mb-4">
  <label class="block font-semibold text-gray-700 mb-1">Description</label>
  <textarea name="description" rows="4"
    class="border p-3 w-full rounded-lg focus:ring-2 focus:ring-blue-400"
    placeholder="Write product details..."><%= product.description %></textarea>
</div>

      <!-- CATEGORY -->
      <label class="block font-semibold mb-1">Category</label>
      <select name="category" class="w-full border p-2 rounded mb-4">
        <% categories.forEach(c => { %>
          <option value="<%= c.id %>" 
            <%= c.id == product.category ? "selected" : "" %>>
            <%= c.name %>
          </option>
        <% }) %>
      </select>

      <!-- PRICE / STOCK / CARTOON SIZE -->
      <div class="grid grid-cols-3 gap-4">
        <div>
          <label class="block font-semibold mb-1">Price</label>
          <input type="number" step="0.01" name="price"
            class="w-full border p-2 rounded mb-4"
            value="<%= product.price %>" required />
        </div>

        <div>
          <label class="block font-semibold mb-1">Stock</label>
          <input type="number" name="stock"
            class="w-full border p-2 rounded mb-4"
            value="<%= product.stock %>" required />
        </div>

        <div>
          <label class="block font-semibold mb-1">Cartoon Size</label>
          <input type="number" name="cartoon_size"
            class="w-full border p-2 rounded mb-4"
            value="<%= product.cartoon_size %>" required />
        </div>
      </div>

      <!-- IMAGE PREVIEW + UPLOAD -->
      <label class="block font-semibold mb-1">Image</label>

      <div class="flex items-center gap-4 mb-4">
        <img id="previewImage" 
             src="<%= product.image %>" 
             class="w-24 h-24 object-cover rounded border" />

        <div>
          <input type="file" id="imageInput" name="image" accept="image/*"
                 class="block mb-2" />

          <label class="text-sm text-gray-600">Or paste Image URL</label>
          <input type="text" id="imageUrl" name="image_url"
                 placeholder="https://example.com/image.jpg"
                 class="w-full border p-2 rounded mt-1" />
        </div>
      </div>

      <!-- BUTTONS -->
      <div class="mt-6 flex items-center gap-4">
        <button type="submit"
          class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
          Update
        </button>

        <a href="/admin/dashboard" class="text-gray-700 hover:underline">
          Cancel
        </a>
      </div>

    </form>
  </div>

  <!-- LIVE IMAGE PREVIEW SCRIPT -->
  <script>
    const preview = document.getElementById('previewImage');
    const imageInput = document.getElementById('imageInput');
    const imageUrl = document.getElementById('imageUrl');

    // Preview on file upload
    imageInput.addEventListener('change', (e) => {
      const file = e.target.files[0];
      if (!file) return;
      const reader = new FileReader();
      reader.onload = (ev) => { preview.src = ev.target.result; };
      reader.readAsDataURL(file);
    });

    // Preview on image URL paste
    imageUrl.addEventListener('input', (e) => {
      if (e.target.value.trim()) preview.src = e.target.value.trim();
    });
  </script>

</body>
</html>
