<!DOCTYPE html> 
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add Category</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col items-center p-6">

  <div class="w-full max-w-md bg-white p-6 rounded-2xl shadow mb-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-4">Add New Category</h1>

    <!-- ADD CATEGORY FORM -->
    <form action="<%= action %>" method="post" class="space-y-4">
      <div>
        <label class="block font-medium text-gray-700 mb-1">Category Name</label>
        <input name="name" placeholder="Enter category name" required
               class="border border-gray-300 p-2 w-full rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" />
      </div>

      <button class="w-full bg-blue-600 text-white py-2 rounded-lg shadow hover:bg-blue-700 transition">
        Save Category
      </button>
    </form>
  </div>

  <!-- EXISTING CATEGORIES LIST -->
  <div class="w-full max-w-md bg-white p-6 rounded-2xl shadow">
    <h2 class="text-xl font-bold text-gray-800 mb-4">Existing Categories</h2>

    <% if (categories && categories.length > 0) { %>
      <% categories.forEach(c => { %>
        <div class="flex items-center justify-between bg-gray-50 p-3 rounded mb-2 shadow-sm">
          <span class="font-medium"><%= c.name %></span>

          <form method="POST" action="/admin/categories/delete/<%= c.id %>" onsubmit="return confirm('Are you sure you want to delete this category?');">
            <button class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600">Delete</button>
          </form>
        </div>
      <% }) %>
    <% } else { %>
      <p class="text-gray-500">No categories added yet.</p>
    <% } %>
  </div>

  <a href="/admin/dashboard"
  class="absolute top-4 right-4 text-blue-600 font-semibold hover:underline">
 ‚Üê Back to Dashboard
</a>

</body>
</html>
