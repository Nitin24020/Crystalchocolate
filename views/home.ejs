<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Crystal Choco Store</title>
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        /* HERO BANNER SLIDER */
        .banner-slider {
            position: relative;
            height: 450px;
            overflow: hidden;
        }

        .banner-slide {
            position: absolute;
            inset: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0;
            transition: opacity 1s ease-in-out;
        }

        .banner-slide.active {
            opacity: 1;
        }
    </style>
</head>

<body class="bg-gray-100">

    <!-- NAVBAR -->
    <nav class="bg-white shadow-md py-4 px-6 sticky top-0 z-50">
        <div class="max-w-7xl mx-auto flex items-center justify-between">

            <!-- LOGO -->
            <div class="flex items-center gap-3">
                <img src="/images/logo.jpg" class="h-12 w-12" alt="Logo">
                <span class="text-2xl font-bold text-red-600">Crystal Choco Store</span>
            </div>

            <!-- DESKTOP MENU -->
            <div class="hidden md:flex items-center gap-6 text-lg">
                <a href="/" class="hover:text-red-600">Home</a>
                <a href="/products" class="hover:text-red-600">Products</a>
                <a href="/admin" class="hover:text-red-600">Admin</a>
                <a href="/about" class="hover:text-red-600">About Us</a>
                <a href="/contact" class="hover:text-red-600">Contact</a>
                <a href="/cart" class="hover:text-red-600">Cart</a>
            </div>

            <!-- MOBILE MENU BUTTON -->
            <button class="md:hidden text-3xl" onclick="toggleMenu()">☰</button>
        </div>
    </nav>

    <!-- MOBILE MENU -->
    <div id="mobileMenu" class="hidden bg-white shadow-md p-4 space-y-4 md:hidden">
        <form action="/products" method="GET">
            <input name="q" type="text" placeholder="Search..." class="px-4 py-2 border rounded w-full">
        </form>

        <a href="/" class="block hover:text-red-600">Home</a>
        <a href="/products" class="block hover:text-red-600">Products</a>
        <a href="/admin" class="block hover:text-red-600">Admin</a>
        <a href="/about" class="block hover:text-red-600">About Us</a>
        <a href="/contact" class="block hover:text-red-600">Contact</a>
        <a href="/cart" class="block hover:text-red-600">Cart</a>
    </div>


    <script>
        function toggleMenu() {
            document.getElementById("mobileMenu").classList.toggle("hidden");
        }
    </script>


    <!-- HERO AUTO SLIDER -->
    <!-- HERO AUTO SLIDER -->
    <section class="relative w-full h-[350px] md:h-[450px] overflow-hidden">
        <div class="absolute inset-0 transition-opacity duration-700 slider" style="opacity:1;">
            <img src="/media/banner1.webp" class="slide active">
        </div>
        <div class="absolute inset-0 transition-opacity duration-700 slider" style="opacity:0;">
            <img src="/media/banner2.webp" class="slide">
        </div>
        <div class="absolute inset-0 transition-opacity duration-700 slider" style="opacity:0;">
            <img src="/media/banner3.jpg" class="slide">
        </div>

    </section>

    <!-- TEXT OVERLAY -->
    <div class="absolute inset-0 bg-black/40 flex items-center justify-center">
        <div class="text-center text-white">
            <h1 class="text-4xl font-bold">Welcome to Crystal Choco Store</h1>
            <p class="mt-2 text-lg">Premium Handmade Chocolates • Gift Packs • Special Orders</p>
            <a href="/products" class="mt-4 inline-block bg-red-600 px-6 py-3 text-lg rounded-lg hover:bg-red-700">
                Shop Now
            </a>
        </div>
    </div>
    </section>

    <script>
        let index = 0;
        const slides = document.querySelectorAll(".slider");

        setInterval(() => {
            slides[index].style.opacity = 0;   // hide current
            index = (index + 1) % slides.length;
            slides[index].style.opacity = 1;   // show next
        }, 3000);
    </script>
    

</body>

</html>