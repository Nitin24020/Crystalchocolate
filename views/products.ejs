<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Our Products</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://cdn.tailwindcss.com"></script>

  <style>
    #successPopup {
      display: none;
      animation: pop 0.4s ease-out;
    }
    @keyframes pop {
      0% { transform: scale(0.7); opacity: 0; }
      70% { transform: scale(1.1); }
      100% { transform: scale(1); opacity: 1; }
    }
  </style>
</head>

<body class="bg-gray-100">

<!-- üéâ SUCCESS POPUP -->
<div id="successPopup"
  class="fixed inset-0 bg-black/40 flex items-center justify-center z-50">
  <div class="bg-white rounded-2xl p-8 text-center shadow-xl">
    <div class="text-6xl mb-3">üéâ</div>
    <h2 class="text-2xl font-bold text-green-700">
      Carton Added Successfully
    </h2>
  </div>
</div>

<div class="max-w-7xl mx-auto p-4">
<!-- HEADER -->
<header class="flex items-center mb-6">

  <!-- LEFT : TITLE -->
  <h1 class="text-3xl font-bold">Our Products</h1>

  <!-- RIGHT : BUTTONS -->
  <div class="ml-auto flex gap-3">

    <!-- üîô HOME -->
    <a href="/"
      class="px-4 py-2 bg-gray-200 rounded-lg shadow
             hover:bg-gray-300 font-semibold">
      ‚Üê Home
    </a>

    <!-- üõí CART -->
    <a href="/cart"
      class="px-4 py-2 bg-white rounded-lg shadow font-semibold">
      Cart (<%= cart_count %>)
    </a>

  </div>

</header>




  <!-- CATEGORY BANNER -->
  <div class="bg-white p-5 rounded-2xl shadow mb-6 flex justify-between items-center">

    <% if (category) { 
      const cat = categories.find(c => c.id == category);
    %>
      <div>
        <p class="text-sm text-gray-500">Selected Category</p>
        <h2 class="text-2xl font-bold"><%= cat.name %></h2>
      </div>

      <!-- ADD FULL CARTON -->
      <button
        id="addCategoryCarton"
        data-category="<%= category %>"
        class="px-6 py-3 bg-orange-600 text-white rounded-xl shadow
               hover:bg-orange-700 font-semibold">
        üì¶ Add Full Carton
      </button>

    <% } else { %>
      <h2 class="text-2xl font-bold">All Products</h2>
    <% } %>

  </div>

  <!-- CATEGORY TABS -->
  <div class="flex gap-3 mb-4 overflow-x-auto whitespace-nowrap pb-2">
    <% categories.forEach(c => { %>
      <a href="/products?category=<%= c.id %>"
        class="px-4 py-2 rounded-xl shadow
        <%= category == c.id
          ? 'bg-red-600 text-white'
          : 'bg-white hover:bg-gray-200' %>">
        <%= c.name %>
      </a>
    <% }) %>
  </div>

  <!-- PRODUCTS GRID -->
 <!-- PRODUCTS GRID -->
<div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 gap-6">

  <% products.forEach(p => { %>

    <a href="/product/<%= p.id %>" class="block">
      <div class="bg-white p-4 rounded-2xl shadow hover:shadow-lg transition">

        <div class="h-44 bg-gray-50 flex items-center justify-center rounded-xl">
          <img src="<%= p.image %>" class="h-full object-contain">
        </div>

        <h3 class="mt-3 font-bold text-center"><%= p.name %></h3>

        <p class="text-center text-sm mt-1">
          Carton Size:
          <span class="font-semibold text-blue-700">
            <%= p.cartoon_size %>
          </span>
        </p>

        <p class="text-center text-lg font-bold text-green-700 mt-1">
          ‚Çπ <%= p.price %>
        </p>

      </div>
    </a>

  <% }) %>

</div>


<!-- SCRIPT -->
<script>
document.addEventListener("DOMContentLoaded", () => {

  const popup = document.getElementById("successPopup");
  const btn = document.getElementById("addCategoryCarton");

  if (!btn) return;

  const showPopup = () => {
    popup.style.display = "flex";
    setTimeout(() => popup.style.display = "none", 1200);
  };

  btn.addEventListener("click", async () => {
    try {
      const categoryId = btn.dataset.category;

      const res = await fetch(`/add-full-carton/${categoryId}`, {
        method: "POST",
        headers: {
          "Content-Type": "application/json"
        }
      });

      const data = await res.json();

      if (data.success) {
        showPopup();
        setTimeout(() => window.location.reload(), 800);
      } else {
        alert(data.error || "Failed to add carton");
      }

    } catch (err) {
      console.error(err);
      alert("Server error");
    }
  });

});
</script>

</body>
</html>
